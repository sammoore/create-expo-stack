{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"lib": ["es2015", "scripthost", "es2015.promise", "es2015.generator", "es2015.iterable"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"sourceMap": false,
		"inlineSourceMap": true,
		"outDir": "build",
		"strict": false,
		"target": "es2015",
		"declaration": true,
		"declarationDir": "build/types",
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
