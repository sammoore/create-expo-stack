import React from 'react';

<% if (props.stylingPackage?.name === "nativewind") {%>
  	import { Text, View } from 'react-native';
<% } else if (props.stylingPackage?.name === "tamagui") {%>
  	import { View } from 'react-native';
	import { TamaguiProvider, Text, styled } from 'tamagui';
	import config from './tamagui.config'
<% } else {%>
  	import { StyleSheet, Text, View } from 'react-native';
<% } %>

import { StatusBar } from 'expo-status-bar';

<% if (props.analyticsPackage?.name === "vexo-analytics") { %>
import { vexo } from 'vexo-analytics';

// If you don't have an API Key:
//  1. Create an account/login in https://vexo.co
//  2. Copy the key and add it to your `.env` file: VEXO_API_KEY=123abc
vexo(process.env.VEXO_API_KEY);
<% } %>

<% if (props.stylingPackage?.name === "nativewind") {%>
  export default function App() {
		return (
			<View className={styles.container}>
        <Text>Open up App.tsx to start working on your app!</Text>
        <StatusBar style="auto" />
      </View >
    );
	}

	const styles = {
		container: 'flex flex-1 items-center justify-center bg-white',
	};
<% } else if (props.stylingPackage?.name === "tamagui") {%>
  	const MyView = styled(View, {
		name: "MyView",
		flex: 1,
		alignItems: 'center',
		justifyContent: 'center',
	});

	export default function App() {
		return (
			<TamaguiProvider config={config}>
				<MyView>
					<Text>Open up App.tsx to start working on your app!</Text>
					<StatusBar style="auto" />
				</MyView>
			</TamaguiProvider >
    	);
	}
<% } else {%>
  	export default function App() {
		return (
			<View style={styles.container}>
				<Text>Open up App.tsx to start working on your app!</Text>
				<StatusBar style="auto" />
			</View >
    	);
	}

	const styles = StyleSheet.create({
		container: {
			flex: 1,
			backgroundColor: '#fff',
			alignItems: 'center',
			justifyContent: 'center',
		},
	});
<% } %>